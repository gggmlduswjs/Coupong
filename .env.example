# Database
DATABASE_URL=sqlite:///./coupang_auto.db
# 프로덕션에서는 PostgreSQL 사용
# DATABASE_URL=postgresql://user:password@localhost:5432/coupang_auto

# Redis (Celery)
REDIS_URL=redis://localhost:6379/0

# Encryption Key (32 bytes, base64 encoded)
# 생성: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# Coupang Accounts (암호화된 값으로 교체)
ACCOUNT_1_NAME=계정1
ACCOUNT_1_EMAIL=account1@example.com
ACCOUNT_1_PASSWORD=password1

ACCOUNT_2_NAME=계정2
ACCOUNT_2_EMAIL=account2@example.com
ACCOUNT_2_PASSWORD=password2

ACCOUNT_3_NAME=계정3
ACCOUNT_3_EMAIL=account3@example.com
ACCOUNT_3_PASSWORD=password3

ACCOUNT_4_NAME=계정4
ACCOUNT_4_EMAIL=account4@example.com
ACCOUNT_4_PASSWORD=password4

ACCOUNT_5_NAME=계정5
ACCOUNT_5_EMAIL=account5@example.com
ACCOUNT_5_PASSWORD=password5

# Crawler Settings
CRAWL_DELAY_MIN=1.0
CRAWL_DELAY_MAX=3.0
CRAWL_MAX_ITEMS_PER_SESSION=100
CRAWL_TIMEOUT=30

# Upload Settings
UPLOAD_DELAY_MIN=5.0
UPLOAD_DELAY_MAX=10.0
UPLOAD_MAX_DAILY_PER_ACCOUNT=20
UPLOAD_ENABLE_PLAYWRIGHT=false

# Analysis Settings
ANALYSIS_PERIOD_DAYS=7
ANALYSIS_EXPOSURE_LOW_THRESHOLD=10
ANALYSIS_CONVERSION_LOW_THRESHOLD=50

# Notification (선택)
ENABLE_KAKAO_NOTIFICATION=false
KAKAO_API_KEY=

ENABLE_EMAIL_NOTIFICATION=true
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your@email.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_FROM=your@email.com
EMAIL_TO=mom@email.com

# Logging
LOG_LEVEL=INFO
LOG_FILE_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
